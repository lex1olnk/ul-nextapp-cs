{
    "version": 2,
    "builds": [
      { "src": "frontend/package.json", "use": "@vercel/next" },
      { "src": "api/main.go", "use": "@vercel/go" }
    ],
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "api/main.go"
      },
      {
        "source": "/(.*)",
        "destination": "/frontend/$1"
      },
      {
        "source": "/player/:id",
        "destination": "/frontend/player/[id]"
      }
    ],
    "cleanUrls": true,
    "trailingSlash": false
  }